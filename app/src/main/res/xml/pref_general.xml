<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="visibility_checkbox"
        android:title="@string/pref_title_user_visibility"
        android:summary="@string/pref_description_social_recommendations"
        android:defaultValue="true" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->

    <Preference android:title="@string/edit_user_profile">
        <intent android:action=".ui.EditUserProfileActivity"/>
    </Preference>

    <Preference android:title="@string/pref_about_page">
        <intent android:action=".ui.About"/>
    </Preference>

</PreferenceScreen>
