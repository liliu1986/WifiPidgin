<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="example_checkbox"
        android:title="@string/pref_title_user_visibility"
        android:summary="@string/pref_description_social_recommendations"
        android:defaultValue="true" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="example_text"
        android:title="@string/pref_title_display_name"
        android:defaultValue="@string/pref_default_display_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />


    <Preference android:title="@string/pref_about_page">
        <intent
            android:targetPackage="com.iotbyte.wifipidgin"
            android:targetClass="com.iotbyte.wifipidgin.ui.SettingsActivity"
            android:action="com.iotbyte.wifipidgin.ui.SettingsActivity" />
    </Preference>

</PreferenceScreen>
